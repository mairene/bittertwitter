<div>
<%if @no_user%>
  <p> <%= @no_user %> </p>
<%end%>
</div>
<div>
<form action="/user" method="get">
  <input type="textarea" name="handle" placeholder="enter username">
  <input type="textarea" name="password" placeholder="enter password">
  <input type="submit" value="Login">
</form>

<form action="/users/new" method="get">
  <h1>New to Bitter?<h1>
  <input type="textarea" name="new_username" placeholder="handle">
